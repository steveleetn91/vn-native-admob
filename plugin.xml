<?xml version="1.0" encoding="UTF-8"?>
<plugin xmlns="http://apache.org/cordova/ns/plugins/1.0"
        id="vn-native-admob" version="1.0.0">
    <name>Vn Native example library</name>
    <description>Vn Native Example Library</description>
    <license>Vn Native 2.0</license>
    <keywords>Vnnative, Example library</keywords>
    <platform name="ios">
        <js-module src="www/ios/vnnative-admob.js" name="vnnativeadmob">
            <clobbers target="vnnativeadmob" />
        </js-module>
        <config-file target="config.xml" parent="/widget">
            <feature name="vnnativeadmob">
                <param name="ios-package" value="vnnativeadmob" />
                <param name="onload" value="true" />
            </feature>
        </config-file>
        <header-file src="src/ios/VnNativeAdmobSdk.h" />
        <source-file src="src/ios/VnNativeAdmobSdk.m" />
        <podspec>
            <config>
                <source url="https://cdn.cocoapods.org/"/>
            </config>
            <pods use-frameworks="true">
                <pod name="Google-Mobile-Ads-SDK"/>
            </pods>
        </podspec>
    </platform>
    <platform name="android">
        <js-module src="www/android/vnnative-admob.js" name="vnnativeadmob">
            <clobbers target="vnnativeadmob" />
        </js-module>
        <config-file target="config.xml" parent="/widget">
            <feature name="VnNativeFacebookSdk">
                <param name="android-package" value="org.apache.cordova.facebook.VnNativeFacebookSdk"/>
                <param name="onload" value="true" />
            </feature>
        </config-file>
        <source-file src="src/android/VnNativeFacebookSdk.java" target-dir="src/org/apache/cordova/facebook" />
        <framework src="com.google.android.gms:play-services-ads:19.2.0"/>
    </platform>
    <platform name="browser">
        <js-module src="www/browser/vnnative-admob.js" name="vnnativeadmob">
            <clobbers target="vnnativeadmob" />
        </js-module>
    </platform>
    <platform name="osx">
        <js-module src="www/osx/vnnative-admob.js" name="vnnativeadmob">
            <clobbers target="vnnativeadmob" />
        </js-module>
    </platform>
    <platform name="windows">
        <js-module src="www/windows/vnnative-admob.js" name="vnnativeadmob">
            <clobbers target="vnnativeadmob" />
        </js-module>
    </platform>
</plugin>